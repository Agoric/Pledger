{
  "name": "@agoric/wallet",
  "productName": "Agoric Wallet",
  "version": "0.1.0",
  "description": "Agoric cryptoeconomy client wallet",
  "main": "./src/entrypoint.cjs",
  "scripts": {
    "start": "electron-forge start",
    "rebuild": "sdk=../agoric-sdk; for m in SwingSet cosmic-swingset; do electron-rebuild -m $sdk/packages/$m; done; wait",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish:electron": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "Agoric",
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "name": "agoric-app",
              "owner": "agoric-labs"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "@agoric/cosmic-swingset": "^0.19.0",
    "agoric": "^0.7.0",
    "electron-squirrel-startup": "^1.0.0",
    "esm": "^3.2.25",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-deb": "6.0.0-beta.52",
    "@electron-forge/maker-dmg": "6.0.0-beta.52",
    "@electron-forge/maker-rpm": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@electron-forge/publisher-github": "6.0.0-beta.52",
    "electron": "9.2.0"
  }
}
